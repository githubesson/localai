{
    "name": "local-ai-chat",
    "private": true,
    "version": "1.0.6",
    "description": "An alternative ai chat interface for locally hosted models",
    "author": "esson",
    "type": "module",
    "main": "main.js",
    "scripts": {
        "dev": "node scripts/copy-pdf-worker.js && vite",
        "build": "node scripts/copy-pdf-worker.js && tsc && vite build",
        "build:dev": "node scripts/copy-pdf-worker.js && vite build --mode development",
        "lint": "eslint .",
        "preview": "vite preview",
        "electron": "NODE_ENV=development node scripts/copy-pdf-worker.js && tsc && vite build && electron .",
        "dist": "node scripts/copy-pdf-worker.js && tsc && vite build && electron-builder -p never -mwl",
        "dist:win": "node scripts/copy-pdf-worker.js && tsc && vite build && electron-builder --win",
        "dist:linux": "node scripts/copy-pdf-worker.js && tsc && vite build && electron-builder --linux",
        "dist:mac": "node scripts/copy-pdf-worker.js && tsc && vite build && electron-builder --mac",
        "postinstall": "node scripts/copy-pdf-worker.js"
    },
    "dependencies": {
        "@hookform/resolvers": "^3.9.0",
        "@radix-ui/react-avatar": "^1.1.0",
        "@radix-ui/react-dialog": "^1.1.2",
        "@radix-ui/react-dropdown-menu": "^2.1.1",
        "@radix-ui/react-label": "^2.1.0",
        "@radix-ui/react-scroll-area": "^1.1.0",
        "@radix-ui/react-separator": "^1.1.0",
        "@radix-ui/react-slot": "^1.1.0",
        "@radix-ui/react-toast": "^1.2.1",
        "@radix-ui/react-toggle": "^1.1.0",
        "@radix-ui/react-tooltip": "^1.1.4",
        "@tanstack/react-query": "^5.56.2",
        "bytenode": "^1.5.7",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "electron-vite": "^3.0.0",
        "lucide-react": "^0.462.0",
        "next-themes": "^0.3.0",
        "pdfjs-dist": "5.0.375",
        "prettier": "^3.5.3",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-hook-form": "^7.53.0",
        "react-markdown": "^10.1.0",
        "react-pdftotext": "^1.3.4",
        "react-router-dom": "^6.26.2",
        "react-syntax-highlighter": "^15.6.1",
        "sonner": "^1.5.0",
        "tailwind-merge": "^2.5.2",
        "tailwindcss-animate": "^1.0.7"
    },
    "devDependencies": {
        "@eslint/js": "^9.9.0",
        "@tailwindcss/typography": "^0.5.15",
        "@types/node": "^22.5.5",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@types/react-syntax-highlighter": "^15.5.13",
        "@vitejs/plugin-react-swc": "^3.5.0",
        "autoprefixer": "^10.4.20",
        "concurrently": "^9.1.2",
        "cross-env": "^7.0.3",
        "electron": "^35.0.1",
        "electron-builder": "^25.1.8",
        "electron-icon-builder": "^2.0.1",
        "eslint": "^9.9.0",
        "eslint-plugin-react-hooks": "^5.1.0-rc.0",
        "eslint-plugin-react-refresh": "^0.4.9",
        "globals": "^15.9.0",
        "postcss": "^8.4.47",
        "tailwindcss": "^3.4.11",
        "typescript": "^5.5.3",
        "typescript-eslint": "^8.0.1",
        "vite": "^5.4.1"
    },
    "build": {
        "appId": "com.localai.chat",
        "files": [
            "dist",
            "main.js",
            "preload.js",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "public/pdf.worker.min.js",
                "to": "pdf.worker.min.js"
            }
        ],
        "productName": "Local AI Chat",
        "directories": {
            "output": "release"
        },
        "mac": {
            "target": [
                {
                    "target": "zip",
                    "arch": [
                        "arm64"
                    ]
                }
            ],
            "icon": "public/appicon.icns"
        },
        "win": {
            "target": [
                {
                    "target": "zip",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "public/favicon.ico"
        },
        "linux": {
            "target": [
                {
                    "target": "zip",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "public/favicon.ico"
        }
    }
}
